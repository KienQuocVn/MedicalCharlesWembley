<style>
    .news-toolbar {
        display: flex;
        gap: 10px;
        margin-bottom: 16px;
        align-items: center;
        flex-wrap: wrap;
    }
    .news-toolbar .form-select,
    .news-toolbar .form-control {
        width: 160px;
        min-width: 100px;
        font-size: 15px;
        padding: 4px 8px;
    }
    .news-toolbar .input-sm {
        width: 220px;
    }
    .news-toolbar .btn {
        padding: 5px 14px;
        font-size: 15px;
        border-radius: 4px;
    }
    .news-table {
        width: 100%;
        border-collapse: collapse;
        background: #f8fbff;
        border-radius: 6px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        font-size: 15px;
    }
    .news-table th, .news-table td {
        padding: 10px 12px;
        border-bottom: 1px solid #e0e7ef;
        text-align: center;
        vertical-align: middle;
    }
    .news-table th {
        background: #e6eefa;
        color: #003366;
        font-weight: 600;
    }
    .news-table td a {
        color: #003366;
        text-decoration: none;
        font-weight: 500;
    }
    .news-table td a:hover {
        color: #0077b6;
        text-decoration: underline;
    }
    .news-pagination {
        display: flex;
        align-items: center;
        gap: 6px;
        margin-top: 18px;
        font-size: 15px;
    }
    .news-pagination .btn {
        padding: 4px 10px;
        font-size: 15px;
        border-radius: 4px;
    }
    
</style>