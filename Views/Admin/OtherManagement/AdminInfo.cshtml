@{
    ViewData["Title"] = "Cập nhật thông tin admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="title">Cập nhật thông tin admin</div>
<form class="admininfo-form" method="post">
    <div class="form-actions-top">
        <button type="submit" class="btn btn-primary">Lưu</button>
    </div>
    <table class="admininfo-table">
        <tr>
            <td class="label">* FullName</td>
            <td><input type="text" name="FullName" value="admin" /></td>
            <td class="label">* Confirm Password</td>
            <td><input type="password" name="ConfirmPassword" value="********" /></td>
        </tr>
        <tr>
            <td class="label">* Password</td>
            <td><input type="password" name="Password" value="********" /></td>
            <td class="label">Address</td>
            <td><input type="text" name="Address" value="s" /></td>
        </tr>
        <tr>
            <td class="label">* Email</td>
            <td><input type="email" name="Email" value="admin@yahoo.com" /></td>
            <td class="label">Fax</td>
            <td><input type="text" name="Fax" value="56" /></td>
        </tr>
        <tr>
            <td class="label">Tel</td>
            <td><input type="text" name="Tel" value="56767890" /></td>
            <td></td>
            <td></td>
        </tr>
    </table>
</form>

<style>
    .admininfo-form {
        background: #f8fbff;
        border-radius: 6px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        padding: 18px 24px 18px 24px;
        margin-bottom: 24px;
        max-width: 100%;
    }
    .form-actions-top {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-bottom: 12px;
    }
    .admininfo-table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        border-radius: 6px;
        font-size: 15px;
    }
    .admininfo-table td {
        padding: 10px 8px;
        border-bottom: 1px solid #e0e7ef;
    }
    .admininfo-table .label {
        background: #e6eefa;
        color: #003366;
        font-weight: 500;
        width: 180px;
        min-width: 120px;
    }
    .admininfo-table input[type="text"],
    .admininfo-table input[type="email"],
    .admininfo-table input[type="password"] {
        width: 100%;
        padding: 6px 10px;
        border: 1px solid #b3c6e0;
        border-radius: 4px;
        font-size: 15px;
        background: #f8fbff;
    }
    .btn {
        padding: 7px 18px;
        font-size: 15px;
        border-radius: 4px;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: background 0.2s;
    }
    .btn-primary {
        background: #0077b6;
        color: #fff;
    }
    .btn-primary:hover {
        background: #005080;
    }
    
</style>
