@{
    ViewData["Title"] = "Slider trang chủ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="title">Quản lý banner/logo</div>

<form class="banner-form">
    <div class="form-row">
        <label>Trạng thái</label>
        <div class="form-radio-group">
            <label><input type="radio" name="status" checked /> Yes</label>
            <label><input type="radio" name="status" /> No</label>
        </div>
    </div>
    <div class="form-row">
        <label>Hình ảnh (1920 x 661)</label>
        <input type="file" />
    </div>
    <div class="form-row">
        <label>Hình ảnh Mobile (768x500)</label>
        <input type="file" />
    </div>
    <div class="form-row">
        <label>Url</label>
        <input type="text" />
    </div>
    <div class="form-row">
        <label>Thứ tự</label>
        <input type="number" value="0" />
    </div>
    <div class="form-row">
        <label>Tên VN</label>
        <input type="text" />
    </div>
    <div class="form-row">
        <label>Tên EN</label>
        <input type="text" />
    </div>
    <div class="form-actions">
        <button type="button" class="btn btn-primary">Tạo mới</button>
        <button type="submit" class="btn btn-success">Lưu</button>
        <button type="button" class="btn btn-danger">Xóa</button>
    </div>
</form>

<table class="data-table banner-table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Hình ảnh</th>
            <th>Hình ảnh Mobile</th>
            <th>Tên</th>
            <th>Thứ tự</th>
            <th>Url</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td><img src="https://via.placeholder.com/192x66" alt="Banner 1" class="table-image" /></td>
            <td><img src="https://via.placeholder.com/76x50" alt="Banner 1 Mobile" class="table-image" /></td>
            <td></td>
            <td>1</td>
            <td>#</td>
            <td>
                <span class="action-btn">✎</span>
                <span class="action-btn delete">✖</span>
            </td>
        </tr>
        <tr>
            <td>2</td>
            <td><img src="https://via.placeholder.com/192x66" alt="Banner 2" class="table-image" /></td>
            <td><img src="https://via.placeholder.com/76x50" alt="Banner 2 Mobile" class="table-image" /></td>
            <td>Slide 02</td>
            <td>2</td>
            <td>#</td>
            <td>
                <span class="action-btn">✎</span>
                <span class="action-btn delete">✖</span>
            </td>
        </tr>
        <tr>
            <td>3</td>
            <td><img src="https://via.placeholder.com/192x66" alt="Banner 3" class="table-image" /></td>
            <td><img src="https://via.placeholder.com/76x50" alt="Banner 3 Mobile" class="table-image" /></td>
            <td></td>
            <td>3</td>
            <td>#</td>
            <td>
                <span class="action-btn">✎</span>
                <span class="action-btn delete">✖</span>
            </td>
        </tr>
        <tr>
            <td>4</td>
            <td><img src="https://via.placeholder.com/192x66" alt="Banner 4" class="table-image" /></td>
            <td><img src="https://via.placeholder.com/76x50" alt="Banner 4 Mobile" class="table-image" /></td>
            <td></td>
            <td>4</td>
            <td>#</td>
            <td>
                <span class="action-btn">✎</span>
                <span class="action-btn delete">✖</span>
            </td>
        </tr>
    </tbody>
</table>

<style>
    .banner-form {
        background: #f8fbff;
        border-radius: 6px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        padding: 18px 24px 8px 24px;
        margin-bottom: 24px;
        max-width: 100%;
    }
    .banner-form .form-row {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
    }
    .banner-form .form-row label {
        width: 180px;
        font-weight: 500;
        color: #003366;
        margin-right: 12px;
        flex-shrink: 0;
    }
    .banner-form .form-row input[type="text"],
    .banner-form .form-row input[type="number"] {
        flex: 1;
        padding: 6px 10px;
        border: 1px solid #b3c6e0;
        border-radius: 4px;
        font-size: 15px;
        background: #fff;
    }
    .banner-form .form-row input[type="file"] {
        flex: 1;
        font-size: 15px;
    }
    .banner-form .form-radio-group {
        display: flex;
        gap: 18px;
    }
    .banner-form .form-radio-group label {
        font-weight: 400;
        color: #222;
        margin-right: 0;
        width: auto;
    }
    .banner-form .form-actions {
        display: flex;
        gap: 12px;
        margin-top: 10px;
        justify-content: flex-end;
    }
    .banner-table th, .banner-table td {
        text-align: center;
        vertical-align: middle;
    }
    .banner-table .table-image {
        max-width: 120px;
        max-height: 60px;
        border-radius: 4px;
        background: #fff;
        border: 1px solid #e0e7ef;
    }
    
</style>