@model List<MedicalCharlesWembley.Models.NewLetter>

@{
    ViewData["Title"] = "NewsLetter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="title">NewsLetter</div>
<div class="newsletter-toolbar">
    <form id="searchForm" method="get" action="@Url.Action("Newsletter")" class="d-flex align-items-center">
        <label for="search">Tìm kiếm:</label>
        <input type="text" id="search" name="searchTerm" class="form-control input-sm" placeholder="" value="@ViewBag.SearchTerm" />
        <button type="submit" class="btn btn-primary btn-sm ms-2">Tìm</button>
    </form>
    <div class="button-group">
        <button class="btn btn-danger btn-sm" id="deleteSelected">Xóa</button>
        <button class="btn btn-info btn-sm" id="exportExcel">Xuất file excel</button>
    </div>
</div>
<table class="newsletter-table" id="newsletterTable">
    <thead>
        <tr>
            <th><input type="checkbox" id="selectAll" /></th>
            <th>STT</th>
            <th>Email</th>
            <th>Ngày đăng ký</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = (ViewBag.CurrentPage - 1) * 10 + 1;
            foreach (var item in Model)
            {
                <tr data-newsletter-id="@item.NewLetterID" data-email="@item.Email">
                    <td><input type="checkbox" class="rowCheckbox" data-id="@item.NewLetterID" /></td>
                    <td>@index</td>
                    <td>@item.Email</td>
                    <td>@item.AddDate?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="action-btn delete" data-bs-toggle="modal" data-bs-target="#deleteModal_@item.NewLetterID">
                            <i class="fa fa-times"></i>
                        </span>

                        <!-- Modal xác nhận xóa -->
                        <div class="modal fade" id="deleteModal_@item.NewLetterID" tabindex="-1" aria-labelledby="deleteModalLabel_@item.NewLetterID" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel_@item.NewLetterID">Confirm Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete the newsletter with Email "<strong>@item.Email</strong>"?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <a href="@Url.Action("DeleteNewsletter", "Admin", new { id = item.NewLetterID })" class="btn btn-danger">Confirm</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr><td colspan="5" class="text-center">No data available</td></tr>
        }
    </tbody>
</table>
<div class="newsletter-pagination">
    @if (ViewBag.TotalPages > 1)
    {
        <a class="page-arrow" href="@Url.Action("Newsletter", new { page = 1, searchTerm = ViewBag.SearchTerm })">&#171;</a>
        <a class="page-arrow" href="@Url.Action("Newsletter", new { page = ViewBag.CurrentPage - 1, searchTerm = ViewBag.SearchTerm })" 
           @(ViewBag.CurrentPage > 1 ? "" : "style=display:none")">&#60;</a>

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <a class="page-num @(i == ViewBag.CurrentPage ? "active" : "")" 
               href="@Url.Action("Newsletter", new { page = i, searchTerm = ViewBag.SearchTerm })">@i</a>
        }

        <a class="page-arrow" href="@Url.Action("Newsletter", new { page = ViewBag.CurrentPage + 1, searchTerm = ViewBag.SearchTerm })" 
           @(ViewBag.CurrentPage < ViewBag.TotalPages ? "" : "style=display:none")">&#62;</a>
        <a class="page-arrow" href="@Url.Action("Newsletter", new { page = ViewBag.TotalPages, searchTerm = ViewBag.SearchTerm })">&#187;</a>
    }
</div>

<style>
    .newsletter-toolbar {
        display: flex;
        justify-content: space-between; /* Phân bố đều giữa các phần tử */
        align-items: center; /* Căn giữa theo chiều dọc */
        gap: 10px; /* Khoảng cách giữa các phần tử */
        margin-bottom: 16px;
        flex-wrap: wrap; /* Cho phép xuống dòng nếu cần */
    }

    .newsletter-toolbar .form-control {
        width: 220px;
        font-size: 15px;
        padding: 4px 8px;
    }

    .newsletter-toolbar .btn {
        padding: 5px 14px;
        font-size: 15px;
        border-radius: 4px;
    }

    .newsletter-table {
        width: 100%;
        border-collapse: collapse;
        background: #f8fbff;
        border-radius: 6px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        font-size: 15px;
    }

    .newsletter-table th, .newsletter-table td {
        padding: 10px 12px;
        border-bottom: 1px solid #e0e7ef;
        text-align: center;
        vertical-align: middle;
    }

    .newsletter-table th {
        background: #e6eefa;
        color: #003366;
        font-weight: 600;
    }

    .action-btn.delete {
        color: #dc3545;
        font-size: 18px;
        cursor: pointer;
        transition: color 0.2s;
    }

    .action-btn.delete:hover {
        color: #a71d2a;
    }

    .newsletter-pagination {
        display: flex;
        align-items: center;
        gap: 4px;
        margin-top: 18px;
        font-size: 16px;
        justify-content: center;
    }

    .newsletter-pagination a.page-arrow {
        color: #0077b6;
        cursor: pointer;
        padding: 0 4px;
        font-size: 18px;
        text-decoration: none;
    }

    .newsletter-pagination a.page-num {
        color: #003366;
        background: #e6eefa;
        border-radius: 3px;
        padding: 2px 8px;
        margin: 0 2px;
        cursor: pointer;
        text-decoration: none;
    }

    .newsletter-pagination a.page-num.active {
        background: #0077b6;
        color: #fff;
        font-weight: bold;
    }

    .button-group {
        display: flex;
        gap: 10px; /* Khoảng cách giữa hai nút */
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        // Chọn tất cả checkbox
        $('#selectAll').click(function() {
            $('.rowCheckbox').prop('checked', $(this).prop('checked'));
        });

        // Xóa các bản ghi đã chọn
        $('#deleteSelected').click(function() {
            var selectedIds = [];
            $('.rowCheckbox:checked').each(function() {
                selectedIds.push($(this).data('id'));
            });

            if (selectedIds.length === 0) {
                alert('Vui lòng chọn ít nhất một bản ghi để xóa!');
                return;
            }

            if (confirm('Bạn có chắc muốn xóa ' + selectedIds.length + ' bản ghi đã chọn?')) {
                $.ajax({
                    url: '@Url.Action("DeleteSelectedNewsletters", "Admin")',
                    type: 'POST',
                    traditional: true,
                    data: { ids: selectedIds },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Có lỗi xảy ra khi xóa bản ghi.');
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi gửi yêu cầu.');
                    }
                });
            }
        });

        // Xuất file Excel
        $('#exportExcel').click(function() {
            var searchTerm = $('#search').val(); // Lấy giá trị tìm kiếm hiện tại
            window.location.href = '@Url.Action("ExportToExcel", "Admin")?searchTerm=' + encodeURIComponent(searchTerm);
        });
    });
</script>