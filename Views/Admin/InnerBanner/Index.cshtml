<style>
    .categorybanner-toolbar {
        display: flex;
        gap: 10px;
        margin-bottom: 16px;
        align-items: center;
        flex-wrap: wrap;
    }
    .categorybanner-toolbar .form-control {
        width: 220px;
        font-size: 15px;
        padding: 4px 8px;
    }
    .categorybanner-toolbar .btn {
        padding: 5px 14px;
        font-size: 15px;
        border-radius: 4px;
    }
    .categorybanner-table {
        width: 100%;
        border-collapse: collapse;
        background: #f8fbff;
        border-radius: 6px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        font-size: 15px;
    }
    .categorybanner-table th, .categorybanner-table td {
        padding: 10px 12px;
        border-bottom: 1px solid #e0e7ef;
        text-align: center;
        vertical-align: middle;
    }
    .categorybanner-table th {
        background: #e6eefa;
        color: #003366;
        font-weight: 600;
    }
    .banner-img {
        max-width: 120px;
        max-height: 90px;
        border-radius: 4px;
        background: #fff;
        border: 1px solid #e0e7ef;
    }
    .action-btn {
        cursor: pointer;
        color: #0077b6;
        font-size: 18px;
        transition: color 0.2s;
    }
    .action-btn:hover {
        color: #ff4500;
    }
    
</style>

