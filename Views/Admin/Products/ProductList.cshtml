@model List<dynamic>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="title">Danh sách sản phẩm</div>

<div class="productlist-toolbar">
    <form id="filterForm" method="get" action="@Url.Action("ProductList")" class="d-flex align-items-center">
        <select name="categoryId" class="form-select select-sm">
            <option value="">Chọn nhóm sản phẩm</option>
            @foreach (var category in ViewBag.Categories)
            {
                @if (ViewBag.CategoryId == category.CategoryID)
                {
                    <option value="@category.CategoryID" selected>@category.Keyword</option>
                }
                else
                {
                    <option value="@category.CategoryID">@category.Keyword</option>
                }
            }
        </select>
        <input type="text" name="searchTerm" class="form-control input-sm ms-2" placeholder="Tìm kiếm sản phẩm..." value="@ViewBag.SearchTerm" />
        <button type="submit" class="btn btn-primary btn-sm ms-2">Tìm</button>
    </form>
    <div class="button-group">
        <button class="btn btn-danger btn-sm" id="deleteSelected">Xóa</button>
        <button class="btn btn-success btn-sm" id="createNew">Tạo mới</button>
    </div>
</div>

<table class="productlist-table" id="productlistTable">
    <thead>
        <tr>
            <th><input type="checkbox" id="selectAll" /></th>
            <th>STT</th>
            <th>Hình ảnh</th>
            <th>Tên SP</th>
            <th>Danh mục</th>
            <th>Thứ tự</th>
            <th>Giá bán lẻ</th>
            <th>Trạng thái</th>
            <th>Thông tin</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = (ViewBag.CurrentPage - 1) * 10 + 1;
            foreach (var item in Model)
            {
                <tr data-product-id="@item.ProductID">
                    <td><input type="checkbox" class="rowCheckbox" data-id="@item.ProductID" /></td>
                    <td>@index</td>
                    <td><img src="@item.ImageLink" alt="@item.ProductName" class="product-img" /></td>
                    <td>@item.ProductName</td>
                    <td>@item.CategoryName</td>
                    <td>@(item.SortOrder ?? 0)</td>
                    <td>@item.Price.ToString("N0") VND</td>
                    <td><span class="status @(item.Status ? "active" : "inactive")">@(item.Status ? "✔" : "✖")</span></td>
                    <td>@item.RegDate?.ToString("dd-MM-yyyy")</td>
                    <td>
                        <span class="action-btn" title="Sửa" onclick="editProduct(@item.ProductID)"><i class="fa fa-edit"></i></span>
                        <span class="action-btn" title="Xóa" data-bs-toggle="modal" data-bs-target="#deleteModal_@item.ProductID"><i class="fa fa-trash"></i></span>
                        <span class="action-btn" title="Xem" onclick="viewProduct(@item.ProductID)"><i class="fa fa-eye"></i></span>

                        <!-- Modal xác nhận xóa -->
                        <div class="modal fade" id="deleteModal_@item.ProductID" tabindex="-1" aria-labelledby="deleteModalLabel_@item.ProductID" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel_@item.ProductID">Confirm Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete the product "<strong>@item.ProductName</strong>"?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <a href="@Url.Action("DeleteProduct", "Admin", new { id = item.ProductID })" class="btn btn-danger">Confirm</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr><td colspan="10" class="text-center">No data available</td></tr>
        }
    </tbody>
</table>

<div class="productlist-pagination">
    @if (ViewBag.TotalPages > 1)
    {
        <a class="btn btn-light btn-sm" href="@Url.Action("ProductList", new { page = 1, searchTerm = ViewBag.SearchTerm, categoryId = ViewBag.CategoryId })">Trang đầu</a>
        <a class="btn btn-light btn-sm" href="@Url.Action("ProductList", new { page = ViewBag.CurrentPage - 1, searchTerm = ViewBag.SearchTerm, categoryId = ViewBag.CategoryId })" 
           @(ViewBag.CurrentPage > 1 ? "" : "style=display:none")">Trang sau</a>

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <a class="btn btn-light btn-sm @(i == ViewBag.CurrentPage ? "active" : "")" 
               href="@Url.Action("ProductList", new { page = i, searchTerm = ViewBag.SearchTerm, categoryId = ViewBag.CategoryId })">@i</a>
        }

        <a class="btn btn-light btn-sm" href="@Url.Action("ProductList", new { page = ViewBag.CurrentPage + 1, searchTerm = ViewBag.SearchTerm, categoryId = ViewBag.CategoryId })" 
           @(ViewBag.CurrentPage < ViewBag.TotalPages ? "" : "style=display:none")">Trang trước</a>
        <a class="btn btn-light btn-sm" href="@Url.Action("ProductList", new { page = ViewBag.TotalPages, searchTerm = ViewBag.SearchTerm, categoryId = ViewBag.CategoryId })">Trang cuối</a>
    }
    <span class="ms-3">Có <b>@ViewBag.TotalRecords</b> sản phẩm</span>
</div>

<style>
    .productlist-toolbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
        margin-bottom: 16px;
        flex-wrap: wrap;
    }

    .productlist-toolbar .form-select,
    .productlist-toolbar .form-control {
        width: 180px;
        min-width: 120px;
        font-size: 15px;
        padding: 4px 8px;
    }

    .productlist-toolbar .input-sm {
        width: 220px;
    }

    .productlist-toolbar .btn {
        padding: 5px 14px;
        font-size: 15px;
        border-radius: 4px;
    }

    .productlist-table {
        width: 100%;
        border-collapse: collapse;
        background: #f8fbff;
        border-radius: 6px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        font-size: 15px;
    }

    .productlist-table th, .productlist-table td {
        padding: 8px 10px;
        border-bottom: 1px solid #e0e7ef;
        text-align: center;
        vertical-align: middle;
    }

    .productlist-table th {
        background: #e6eefa;
        color: #003366;
        font-weight: 600;
    }

    .product-img {
        max-width: 48px;
        max-height: 48px;
        border-radius: 4px;
        background: #fff;
        border: 1px solid #e0e7ef;
    }

    .status.active {
        color: #28a745;
        font-weight: bold;
    }

    .status.inactive {
        color: #dc3545;
        font-weight: bold;
    }

    .action-btn {
        cursor: pointer;
        margin: 0 3px;
        color: #0077b6;
        font-size: 18px;
        transition: color 0.2s;
    }

    .action-btn:hover {
        color: #ff4500;
    }

    .productlist-pagination {
        display: flex;
        align-items: center;
        gap: 6px;
        margin-top: 18px;
        font-size: 15px;
    }

    .productlist-pagination .btn {
        padding: 4px 10px;
        font-size: 15px;
        border-radius: 4px;
    }

    .productlist-pagination .btn.active {
        background: #0077b6;
        color: #fff;
        font-weight: bold;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        // Chọn tất cả checkbox
        $('#selectAll').click(function() {
            $('.rowCheckbox').prop('checked', $(this).prop('checked'));
        });

        // Xóa các bản ghi đã chọn (cần thêm action DeleteSelectedProducts)
        $('#deleteSelected').click(function() {
            var selectedIds = [];
            $('.rowCheckbox:checked').each(function() {
                selectedIds.push($(this).data('id'));
            });

            if (selectedIds.length === 0) {
                alert('Vui lòng chọn ít nhất một sản phẩm để xóa!');
                return;
            }

            if (confirm('Bạn có chắc muốn xóa ' + selectedIds.length + ' sản phẩm đã chọn?')) {
                $.ajax({
                    url: '@Url.Action("DeleteSelectedProducts", "Admin")',
                    type: 'POST',
                    traditional: true,
                    data: { ids: selectedIds },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Có lỗi xảy ra khi xóa sản phẩm.');
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi gửi yêu cầu.');
                    }
                });
            }
        });

        // Chuyển đến trang tạo mới
        $('#createNew').click(function() {
            window.location.href = '@Url.Action("CreateProduct", "Admin")';
        });
    });

    function editProduct(productId) {
        window.location.href = '@Url.Action("EditProduct", "Admin")?id=' + productId;
    }

    function viewProduct(productId) {
        window.location.href = '@Url.Action("ViewProduct", "Admin")?id=' + productId;
    }
</script>