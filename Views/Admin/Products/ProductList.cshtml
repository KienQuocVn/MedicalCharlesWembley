@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="title">Danh sách sản phẩm</div>

<div class="filter-toolbar">
    <div class="filter-group">
        <!-- Bộ lọc trạng thái -->
        <select class="form-control form-control-sm" id="statusFilter">
            <option value="">Chọn trạng thái</option>
            <option value="1">Hiện</option>
            <option value="0">Ẩn</option>
        </select>
        <!-- Bộ lọc nhóm sản phẩm -->
        <select class="form-control form-control-sm" id="categoryFilter">
            <option value="">Chọn nhóm sản phẩm</option>
            @if (ViewBag.Products != null && ((IEnumerable<dynamic>)ViewBag.Products).Any())
            {
                var categories = ((IEnumerable<dynamic>)ViewBag.Products).Select(p => p.CategoryName).Distinct().Where(c => c != null);
                foreach (var category in categories)
                {
                    <option value="@category">@category</option>
                }
            }
        </select>
        <!-- Thanh tìm kiếm -->
        <input type="text" class="form-control form-control-sm" id="searchTerm" placeholder="Tìm tên sản phẩm..." />
        <!-- Nút Search -->
        <button class="btn btn-primary btn-sm" id="searchButton">Search</button>
    </div>
    <div class="productlist-toolbar">
        <div class="button-group">
            <button class="btn btn-danger btn-sm" id="deleteSelected">Xóa</button>
            <button class="btn btn-success btn-sm" id="createNew">Tạo mới</button>
        </div>
    </div>
</div>

<table class="productlist-table" id="productlistTable">
    <thead>
        <tr>
            <th><input type="checkbox" id="selectAll" /></th>
            <th>STT</th>
            <th>Hình ảnh</th>
            <th>Tên SP</th>
            <th>Danh mục</th>
            <th>Thứ tự</th>
            <th>Giá bán/cũ</th>
            <th>Trạng thái</th>
            <th>Thông tin</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Products != null && ((IEnumerable<dynamic>)ViewBag.Products).Any())
        {
            int index = 1;
            foreach (var item in ViewBag.Products)
            {
                <tr data-product-id="@item.ProductID">
                    <td><input type="checkbox" class="rowCheckbox" data-id="@item.ProductID" /></td>
                    <td>@index</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageLink))
                        {
                            <img src="/UserFile/Products/@item.ImageLink" alt="@item.Name" class="product-img" />
                        }
                        else
                        {
                            <span>Không có ảnh</span>
                        }
                    </td>
                    <td>@(item.Name ?? "Không có tên")</td>
                    <td>@(item.CategoryName ?? "Không có danh mục")</td>
                    <td>@item.SortOrder</td>
                    <td>
                        <input type="text" class="form-control form-control-sm text-danger" value="@item.Price" style="width:70px; display:inline-block;" />
                        <input type="text" class="form-control form-control-sm mt-2" style="width:70px; display:inline-block;" />
                    </td>
                    <td>
                        @if (item.Status != null)
                        {
                            if (item.Status == 1)
                            {
                                <span class="status active">✔</span>
                            }
                            else
                            {
                                <span class="status inactive">✖</span>
                            }
                        }
                        else
                        {
                            <span class="status">N/A</span>
                        }
                    </td>
                    <td>@(item.RegDate?.ToString("dd/MM/yyyy") ?? "N/A")<br /> ID - @item.ProductID - @item.Model</td>
                    <td>
                        <span class="action-btn" title="Sửa" onclick="editProduct(@item.ProductID)"><i class="fa fa-edit"></i></span>
                        <span class="action-btn" title="Xóa" data-bs-toggle="modal" data-bs-target="#deleteModal_@item.ProductID"><i class="fa fa-trash"></i></span>
                        <span class="action-btn" title="Xem" onclick="viewProduct(@item.ProductID)"><i class="fa fa-eye"></i></span>

                        <!-- Modal xác nhận xóa -->
                        <div class="modal fade" id="deleteModal_@item.ProductID" tabindex="-1" aria-labelledby="deleteModalLabel_@item.ProductID" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel_@item.ProductID">Xác nhận xóa</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Bạn có chắc muốn xóa sản phẩm "<strong>@item.Name</strong>"?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                        <a href="@Url.Action("DeleteProduct", "Admin", new { id = item.ProductID })" class="btn btn-danger">Xác nhận</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr><td colspan="10" class="text-center">Không có dữ liệu</td></tr>
        }
    </tbody>
</table>

<style>
    .productlist-toolbar {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-bottom: 16px;
    }

    .productlist-toolbar .btn {
        padding: 5px 14px;
        font-size: 15px;
        border-radius: 4px;
    }

    .filter-toolbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .filter-group {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .filter-group .form-control {
        width: 150px;
        padding: 5px;
    }

    #categoryFilter {
        width: 350px; /* Tăng width riêng cho bộ lọc nhóm sản phẩm */
    }

    .productlist-table {
        width: 100%;
        border-collapse: collapse;
        background: #f8fbff;
        border-radius: 6px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        font-size: 10px;
    }

    .productlist-table th, .productlist-table td {
        padding: 8px 10px;
        border-bottom: 1px solid #e0e7ef;
        text-align: center;
        vertical-align: middle;
    }

    .productlist-table th {
        background: #e6eefa;
        color: #003366;
        font-weight: 600;
        font-size: 9px;
    }

    .product-img {
        max-width: 48px;
        max-height: 48px;
        border-radius: 4px;
        background: #fff;
        border: 1px solid #e0e7ef;
    }

    .status.active {
        color: #28a745;
        font-weight: bold;
    }

    .status.inactive {
        color: #dc3545;
        font-weight: bold;
    }

    .action-btn {
        cursor: pointer;
        margin: 0 3px;
        color: #0077b6;
        font-size: 15px;
        transition: color 0.2s;
    }

    .action-btn:hover {
        color: #ff4500;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $('#selectAll').click(function() {
            $('.rowCheckbox').prop('checked', $(this).prop('checked'));
        });

        $('#deleteSelected').click(function() {
            var selectedIds = [];
            $('.rowCheckbox:checked').each(function() {
                selectedIds.push($(this).data('id'));
            });

            if (selectedIds.length === 0) {
                alert('Vui lòng chọn ít nhất một sản phẩm để xóa!');
                return;
            }

            if (confirm('Bạn có chắc muốn xóa ' + selectedIds.length + ' sản phẩm đã chọn?')) {
                $.ajax({
                    url: '@Url.Action("DeleteSelectedProducts", "Admin")',
                    type: 'POST',
                    traditional: true,
                    data: { ids: selectedIds },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Có lỗi xảy ra khi xóa sản phẩm.');
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi gửi yêu cầu.');
                    }
                });
            }
        });

        $('#createNew').click(function() {
            window.location.href = '@Url.Action("CreateProduct", "Admin")';
        });

        // Xử lý bộ lọc và tìm kiếm
        $('#searchButton').click(function() {
            var status = $('#statusFilter').val();
            var category = $('#categoryFilter').val();
            var searchTerm = $('#searchTerm').val();

            $.ajax({
                url: '@Url.Action("ProductList", "Admin")',
                type: 'GET',
                data: {
                    statusFilter: status,
                    categoryFilter: category,
                    searchTerm: searchTerm
                },
                success: function(response) {
                    $('#productlistTable tbody').html($(response).find('#productlistTable tbody').html());
                },
                error: function() {
                    alert('Có lỗi xảy ra khi lọc dữ liệu.');
                }
            });
        });
    });

    function editProduct(productId) {
        window.location.href = '@Url.Action("EditProduct", "Admin")?id=' + productId;
    }

    function viewProduct(productId) {
        window.location.href = '@Url.Action("ViewProduct", "Admin")?id=' + productId;
    }
</script>