@{
    ViewData["Title"] = "Điều hướng 301/302";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="title">Điều hướng 301/302</div>
<form class="redirect-form" method="post">
    <div class="form-actions-top">
        <button type="reset" class="btn btn-secondary">Reset</button>
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-danger">Delete</button>
    </div>
    <table class="redirect-table">
        <tr>
            <td class="label">From Link *</td>
            <td><input type="text" name="FromLink" /></td>
        </tr>
        <tr>
            <td class="label">To Link *</td>
            <td><input type="text" name="ToLink" /></td>
        </tr>
        <tr>
            <td class="label">Type *</td>
            <td>
                <select name="Type">
                    <option value="301">301</option>
                    <option value="302">302</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="label">Module</td>
            <td>
                <select name="Module">
                    <option>Chọn module</option>
                </select>
            </td>
        </tr>
    </table>
</form>

<style>
    .redirect-form {
        background: #f8fbff;
        border-radius: 6px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        padding: 18px 24px 18px 24px;
        margin-bottom: 24px;
        max-width: 100%;
    }
    .form-actions-top {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-bottom: 12px;
    }
    .redirect-table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        border-radius: 6px;
        font-size: 15px;
    }
    .redirect-table td {
        padding: 10px 8px;
        border-bottom: 1px solid #e0e7ef;
    }
    .redirect-table .label {
        background: #e6eefa;
        color: #003366;
        font-weight: 500;
        width: 180px;
        min-width: 120px;
    }
    .redirect-table input[type="text"],
    .redirect-table select {
        width: 100%;
        padding: 6px 10px;
        border: 1px solid #b3c6e0;
        border-radius: 4px;
        font-size: 15px;
        background: #f8fbff;
    }
    .btn {
        padding: 7px 18px;
        font-size: 15px;
        border-radius: 4px;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: background 0.2s;
    }
    .btn-primary {
        background: #0077b6;
        color: #fff;
    }
    .btn-primary:hover {
        background: #005080;
    }
    .btn-secondary {
        background: #6c757d;
        color: #fff;
    }
    .btn-secondary:hover {
        background: #495057;
    }
    .btn-danger {
        background: #dc3545;
        color: #fff;
    }
    .btn-danger:hover {
        background: #a71d2a;
    }
    
</style>
