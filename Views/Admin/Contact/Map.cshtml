@{
    ViewData["Title"] = "Bản đồ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="title">Config info</div>
<form class="map-form" method="post">
    <div class="form-actions-top">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary">Back</button>
    </div>
    <div class="form-row">
        <label for="configName">Config Name:</label>
        <input type="text" id="configName" name="configName" value="Bản đồ" />
    </div>
    <div class="form-row">
        <label for="configValue">Config Value:</label>
        <input type="text" id="configValue" name="configValue" value='<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.10715965;" />' />
    </div>
</form>

<style>
    .map-form {
        background: #f8fbff;
        border-radius: 6px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        padding: 18px 24px 18px 24px;
        margin-bottom: 24px;
        max-width: 100%;
    }
    .form-actions-top {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-bottom: 12px;
    }
    .map-form .form-row {
        display: flex;
        align-items: center;
        margin-bottom: 16px;
    }
    .map-form .form-row label {
        width: 160px;
        font-weight: 500;
        color: #003366;
        margin-right: 12px;
        flex-shrink: 0;
    }
    .map-form .form-row input[type="text"] {
        flex: 1;
        padding: 6px 10px;
        border: 1px solid #b3c6e0;
        border-radius: 4px;
        font-size: 15px;
        background: #fff;
    }
    .btn {
        padding: 7px 18px;
        font-size: 15px;
        border-radius: 4px;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: background 0.2s;
    }
    .btn-primary {
        background: #0077b6;
        color: #fff;
    }
    .btn-primary:hover {
        background: #005080;
    }
    .btn-secondary {
        background: #6c757d;
        color: #fff;
    }
    .btn-secondary:hover {
        background: #495057;
    }
</style>
