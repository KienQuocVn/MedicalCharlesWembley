    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div class="admin-header">
        <div class="admin-header-left">
            <img src="/wwwroot/images/Logo.png" alt="Logo" class="admin-logo" />
            <span class="admin-title">WEB ADMIN <span class="admin-sub">SYSTEM MANAGER</span></span>
        </div>
        <div class="admin-header-right">
            <span class="admin-welcome">Welcome: admin</span>
        </div>
    </div>
    <div class="admin-main">
        <nav class="admin-sidebar">
            <div class="sidebar-title">MENU</div>
            <ul class="sidebar-menu">
                <li class="has-sub">
                    <a href="#">Trang chủ</a>
                    <ul class="sidebar-submenu">
                        <li><a href="@Url.Action("Header", "Admin", new { area = "" })">Đầu trang</a></li>
                        <li><a href="@Url.Action("Slider", "Admin", new { area = "" })">Slider trang chủ</a></li>
                        <li><a href="@Url.Action("HomeAbout", "Admin", new { area = "" })">Giới thiệu</a></li>
                        <li><a href="@Url.Action("HomeServices", "Admin", new { area = "" })">Dịch vụ</a></li>
                        <li><a href="@Url.Action("PartnerLogo", "Admin", new { area = "" })">Logo đối tác</a></li>
                        <li><a href="@Url.Action("CustomerLogo", "Admin", new { area = "" })">Logo khách hàng</a></li>
                        <li><a href="@Url.Action("FooterInfo", "Admin", new { area = "" })">Thông tin chân trang</a></li>
                        <li><a href="@Url.Action("SocialLinks", "Admin", new { area = "" })">Liên kết mạng xã hội</a></li>
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="@Url.Action("About", "Admin", new { area = "" })">Giới thiệu</a>
                    <ul class="sidebar-submenu">
                        <!-- No sub-items -->
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="#">Sản phẩm</a>
                    <ul class="sidebar-submenu">
                        <li><a href="@Url.Action("ProductList", "Admin", new { area = "" })">Danh sách sản phẩm</a></li>
                        <li><a href="@Url.Action("ProducCategory", "Admin", new { area = "" })">Danh mục sản phẩm</a></li>
                        <li><a href="@Url.Action("Brands", "Admin", new { area = "" })">Thương hiệu</a></li>
                        <li><a href="@Url.Action("OrderManagement", "Admin", new { area = "" })">Quản lý đơn hàng</a></li>
                        <li><a href="@Url.Action("ProductCommitment", "Admin", new { area = "" })">Cam kết sản phẩm</a></li>
                        <li><a href="@Url.Action("CategoryBanner", "Admin", new { area = "" })">Banner menu danh mục</a></li>
                        <li><a href="@Url.Action("OrderButton", "Admin", new { area = "" })">Nút liên hệ đặt hàng</a></li>
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="@Url.Action("Services", "Admin", new { area = "" })">Dịch vụ</a>
                    <ul class="sidebar-submenu">
                        <!-- No sub-items -->
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="@Url.Action("InnerBanner", "Admin", new { area = "" })">Banner trong trang</a>
                    <ul class="sidebar-submenu">
                        <!-- No sub-items -->
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="@Url.Action("News", "Admin", new { area = "" })">Tin tức - sự kiện</a>
                    <ul class="sidebar-submenu">
                        <!-- No sub-items -->
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="#">Thông tin thanh toán</a>
                    <ul class="sidebar-submenu">
                        <li><a href="@Url.Action("CashOnDelivery", "Admin", new { area = "" })">Thanh toán tiền mặt khi nhận hàng</a></li>
                        <li><a href="@Url.Action("BankTransfer", "Admin", new { area = "" })">Thanh toán chuyển khoản ngân hàng</a></li>
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="#">Liên hệ</a>
                    <ul class="sidebar-submenu">
                        <li><a href="@Url.Action("ContactInfo", "Admin", new { area = "" })">Thông tin liên hệ & bản đồ</a></li>
                        <li><a href="@Url.Action("Hotline", "Admin", new { area = "" })">Hotline</a></li>
                        <li><a href="@Url.Action("Map", "Admin", new { area = "" })">Bản đồ</a></li>
                        <li><a href="@Url.Action("AdminEmail", "Admin", new { area = "" })">Email admin</a></li>
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="#">Quản lý khác</a>
                    <ul class="sidebar-submenu">
                        <li><a href="@Url.Action("OtherConfig", "Admin", new { area = "" })">Cấu hình khác</a></li>
                        <li><a href="@Url.Action("FileManagement", "Admin", new { area = "" })">Quản lý file</a></li>
                        <li><a href="@Url.Action("AdminInfo", "Admin", new { area = "" })">Thông tin admin</a></li>
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="@Url.Action("Newsletter", "Admin", new { area = "" })">Danh sách đăng ký nhận tin</a>
                    <ul class="sidebar-submenu">
                        <!-- No sub-items -->
                    </ul>
                </li>
                <li class="has-sub">
                    <a href="#">Quản lý SEO</a>
                    <ul class="sidebar-submenu">
                        <li><a href="@Url.Action("HomeSEO", "Admin", new { area = "" })">Trang chủ</a></li>
                        <li><a href="@Url.Action("GoogleManager", "Admin", new { area = "" })">Google Manager</a></li>
