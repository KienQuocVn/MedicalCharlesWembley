    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Show/hide totop button and smooth scroll
        document.addEventListener('DOMContentLoaded', function () {
            var totop = document.querySelector('.totop-fixed');
            var totopBtn = document.getElementById('totop-btn');
            totop.style.display = 'none';
            window.addEventListener('scroll', function () {
                if (window.scrollY > 200) {
                    totop.style.display = 'block';
                } else {
                    totop.style.display = 'none';
                }
            });
            totopBtn.addEventListener('click', function (e) {
                e.preventDefault();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
        });

        // Mega menu hover behavior
        document.addEventListener('DOMContentLoaded', () => {
            const megaDropdown = document.querySelector('.mega-dropdown');
            const megaTrigger = megaDropdown.querySelector('.mega-trigger');
            const megaMenu = megaDropdown.querySelector('.sublist.mega-menu');

            let isMenuVisible = false;

            megaTrigger.addEventListener('mouseenter', () => {
                megaMenu.style.display = 'block';
                isMenuVisible = true;
            });

            megaDropdown.addEventListener('mouseleave', (e) => {
                const relatedTarget = e.relatedTarget;
                if (!megaTrigger.contains(relatedTarget) && !megaMenu.contains(relatedTarget)) {
                    setTimeout(() => {
                        if (!megaTrigger.matches(':hover') && !megaMenu.matches(':hover')) {
                            megaMenu.style.display = 'none';
                            isMenuVisible = false;
                        }
                    }, 100);
                }
            });

            megaMenu.addEventListener('mouseenter', () => {
                isMenuVisible = true;
                megaMenu.style.display = 'block';
            });

            megaMenu.addEventListener('mouseleave', (e) => {
                const relatedTarget = e.relatedTarget;
                if (!megaTrigger.contains(relatedTarget) && !megaMenu.contains(relatedTarget)) {
                    setTimeout(() => {
                        if (!megaTrigger.matches(':hover') && !megaMenu.matches(':hover')) {
                            megaMenu.style.display = 'none';
                            isMenuVisible = false;
                        }
                    }, 100);
                }
            });
        });

        // Search functionality
        document.addEventListener('DOMContentLoaded', function () {
            const searchIcons = document.querySelectorAll('.js-search-toggle');
            const searchForm = document.getElementById('searchForm');

            if (searchIcons.length && searchForm) {
                searchIcons.forEach(icon => {
                    icon.addEventListener('click', function (e) {
                        e.preventDefault();
                        searchForm.classList.toggle('d-none');
                        if (!searchForm.classList.contains('d-none')) {
                            searchForm.querySelector('.search-input').focus();
                        }
                    });
                });

                // Ẩn form khi click ra ngoài
                document.addEventListener('click', function (e) {
                    if (!searchForm.contains(e.target) && !e.target.closest('.js-search-toggle')) {
                        searchForm.classList.add('d-none');
                    }
                });
            } else {
                console.error('Không tìm thấy searchIcon hoặc searchForm');
            }
        });

    </script>
